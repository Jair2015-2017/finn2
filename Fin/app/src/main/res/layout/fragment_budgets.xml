<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="32dp"
        android:id="@+id/remove" />

    <Button
        android:text="add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/remove"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp"
        android:id="@+id/add_budget"
        android:onClick="addBudgetEvent"/>

    <ListView
        android:layout_width="300dp"
        android:id="@+id/listview"
        android:dividerHeight="10dp"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/remove"
        android:layout_alignStart="@+id/remove" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:id="@+id/remaining_for_budget"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_above="@+id/listview"
        android:layout_alignRight="@+id/add_budget"
        android:layout_alignEnd="@+id/add_budget" />

    <TextView
        android:text="remaining for budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/remaining_for_budget"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />
</RelativeLayout>