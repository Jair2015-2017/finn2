<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jair.fin.fragments.Home.AddEarningDialog">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <Button
            android:text="@android:string/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ok_but"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/add_earning_amount_input"
            android:layout_alignEnd="@+id/add_earning_amount_input"
            android:textColor="@color/green"
            android:onClick="addEarningOK"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:text="@android:string/cancel"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/add_earning_amount_input"
            android:layout_alignStart="@+id/add_earning_amount_input"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/red"
            android:onClick="addEarningCancel"/>


        <TextView
            android:text="add earning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_earning_text"
            android:textSize="24sp"
            android:layout_above="@+id/add_expense_name_input"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/add_earning_amount_input"
            android:hint="0.00"
            android:textAlignment="center"
            android:inputType="number|numberDecimal"
            android:layout_marginBottom="50dp"
            android:layout_above="@+id/ok_but"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/add_earning_name_input"
            android:hint="name of earning"
            android:textAlignment="center"
            android:layout_marginBottom="40dp"
            android:layout_above="@+id/add_earning_amount_input"
            android:layout_alignLeft="@+id/add_earning_amount_input"
            android:layout_alignStart="@+id/add_earning_amount_input" />


    </RelativeLayout>

</FrameLayout>
